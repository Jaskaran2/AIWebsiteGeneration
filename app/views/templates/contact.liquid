<h1>{{ content.heading }}</h1>
<p>{{ content.description }}</p>
{% for section in content.sections %}
<section>
    <h2>{{ section.title }}</h2>
    <p>{{ section.body }}</p>
    {% if section.image_url %}
    <img src="{{ section.image_url }}" alt="{{ section.image_prompt }}" style="max-width:50%; height:auto;">
    {% endif %}
</section>
{% endfor %}
